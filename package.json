{
    "name": "nodejs",
    "version": "0.1.0",
    "description": "",
    "packageManager": "pnpm@10.0.0",
    "type": "module",
    "main": "src/index.ts",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "debug": "tsx --inspect src/index.ts",
        "debug:watch": "nodemon --watch src --ext ts,js --exec 'tsx --inspect src/index.ts'",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --ext .ts,.js",
        "lint:fix": "eslint . --ext .ts,.js --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "check": "pnpm typecheck && pnpm lint && pnpm format:check",
        "db:up": "docker-compose up -d",
        "db:down": "docker-compose down",
        "db:logs": "docker-compose logs -f db",
        "db:reset": "docker-compose down -v && rm -rf docker/mariadb/data && mkdir -p docker/mariadb/data && touch docker/mariadb/data/.gitkeep && docker-compose up db -d",
        "db:shell": "docker-compose exec db mysql -u db_user -p api",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "tsx src/db/migrate.ts",
        "db:push": "drizzle-kit push:mysql",
        "db:studio": "drizzle-kit studio",
        "db:drop": "drizzle-kit drop",
        "db:check": "drizzle-kit check:mysql",
        "db:generate:name": "drizzle-kit generate --name",
        "db:reset:migrations": "rm -rf src/db/migrations && pnpm db:generate"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@fastify/cors": "^11.1.0",
        "@fastify/helmet": "^13.0.1",
        "@fastify/sensible": "^6.0.3",
        "@fastify/under-pressure": "^9.0.3",
        "@types/bcrypt": "^6.0.0",
        "bcrypt": "^6.0.0",
        "dotenv": "^17.2.1",
        "drizzle-orm": "^0.44.4",
        "drizzle-zod": "^0.8.3",
        "fastify": "^5.5.0",
        "fastify-type-provider-zod": "^5.0.3",
        "mysql2": "^3.14.3",
        "zod": "^4.0.17"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@types/node": "^24.2.1",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "drizzle-kit": "^0.31.4",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.0",
        "nodemon": "^3.1.10",
        "pino-pretty": "^13.1.1",
        "prettier": "^3.3.0",
        "tsx": "^4.20.4",
        "typescript": "^5.9.2"
    }
}
