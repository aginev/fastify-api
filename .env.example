# Server Configuration
# ===================
PORT=3000
NODE_ENV=development
GRACEFUL_SHUTDOWN_TIMEOUT=15000

# Database Configuration
# =====================

# Basic Connection Settings
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=api
DATABASE_USER=db_user
DATABASE_PASSWORD=db_pass

# Connection Pool Settings
DATABASE_POOL_LIMIT=10                    # Maximum connections in pool (default: 10)
DATABASE_CONNECT_TIMEOUT=60000            # Connection timeout in milliseconds (default: 60000)
DATABASE_QUEUE_LIMIT=0                    # Unlimited queue for waiting connections (default: 0)
DATABASE_SUPPORT_BIG_NUMBERS=true         # Better handling of BIGINT values (default: true)
DATABASE_BIG_NUMBER_STRINGS=false         # Return big numbers as numbers, not strings (default: false)
DATABASE_DATE_STRINGS=false               # Return dates as Date objects, not strings (default: false)
DATABASE_ENABLE_KEEP_ALIVE=true           # Enable TCP keep-alive (default: true)
DATABASE_KEEP_ALIVE_INITIAL_DELAY=0       # Start keep-alive immediately (default: 0)